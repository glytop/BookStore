<div class="container py-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-auto">
            <p class="me-2">Choose region: </p>
            <select name="country" id="countrySelect" class="form-select" aria-label="Default select example">
                <option value="">Select country</option>
                <option value="en_US;+1(###) ###-##-##">USA</option>
                <option value="nl;+49(###) ##-###">German</option>
                <option value="fr;+33(###) ###-###">French</option>
            </select>
        </div>

        <div class="col-md-auto">
            <p class="me-2">Seed</p>
            <input id="seedInput" type="number" min="0" max="999999999" value="0" class="me-2">
            <button class="btn btn-outline-secondary refresh-btn" id="randomSeedButton">
                <i class="bi bi-shuffle"></i>
            </button>
        </div>

        <div class="col-md-auto">
            <p class="me-2">Likes</p>
            <input value="0" name="rangeValue" id="rangeInput" type="range" class="form-range me-2" min="0" max="10" step="0.1">
            <input value="0" type="number" id="numberInput" class="form-control" min="0" max="10" step="0.1" placeholder="0-10">
        </div>

        <div class="col-md-auto">
            <label class="me-2 mb-3">Reviews</label>
            <input type="number" class="form-control" id="reviews" placeholder="Reviews" value="0" step="0.1" min="0" max="10">
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <table id="userTable" class="table">
                <thead>
                    <tr>
                        <th width="5%"></th>
                        <th width="5%">#</th>
                        <th width="15%">ISBN</th>
                        <th width="35%">Title</th>
                        <th width="25%">Author</th>
                        <th width="15%">Publisher</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">

                </tbody>
            </table>
        </div>
    </div>
</div>

